{
  "name": "@surix/client",
  "version": "0.7.2",
  "description": "Surix API Client",
  "keywords": [
    "surix",
    "client",
    "wrapper",
    "api",
    "rest"
  ],
  "author": "Alpha Manuscript <surix@manuscript.live>",
  "homepage": "https://github.com/alphamanuscript/surix-js-sdk#readme",
  "license": "ISC",
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "directories": {
    "lib": "src"
  },
  "files": [
    "lib",
    "dist"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/alphamanuscript/surix-js-sdk.git"
  },
  "scripts": {
    "test": "jest src",
    "test:watch": "jest --watch src",
    "test:e2e": "jest test/e2e",
    "test:all": "yarn test",
    "clean": "rm -rf lib dist",
    "build": "yarn clean && yarn build:node && yarn build:umd",
    "build:node": "tsc",
    "build:umd": "webpack --mode=production",
    "prepublish": "yarn test:all && yarn build"
  },
  "bugs": {
    "url": "https://github.com/alphamanuscript/surix-js-sdk/issues"
  },
  "jest": {
    "rootDir": ".",
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testRegex": "(/tests/.*|(\\.|/)(test|spec))\\.(js?|ts?)$",
    "moduleFileExtensions": [
      "ts",
      "js"
    ]
  },
  "devDependencies": {
    "@types/axios": "^0.14.0",
    "@types/jest": "^23.3.9",
    "jest": "^23.6.0",
    "ts-jest": "^23.10.5",
    "tslint": "^5.11.0",
    "typescript": "^3.1.6",
    "uglifyjs-webpack-plugin": "^2.0.1",
    "webpack": "^4.26.0",
    "webpack-cli": "^3.1.2"
  },
  "dependencies": {
    "@surix/data-helpers": "^0.7.1",
    "axios": "^0.18.0"
  }
}
